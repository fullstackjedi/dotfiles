[user]
	name = Kevin Wolf
	email = hi@kevinwolf.cr

[credential]
	helper = store

[init]
	defaultBranch = main

[pull]
	rebase = true

[push]
	autoSetupRemote = true

[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	hyperlinks = true
	hyperlinks-file-link-format = "cursor://file/{path}:{line}"
	line-numbers = true
	navigate = true

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default

[include]
	path = .gitconfig-custom
